<%- include('../partials/header') %>
    <form action="/" method="GET">
        <table>
            <thead>
                <tr>
                    <th>Airline</th>
                    <th>Airport</th>
                    <th>Flight #</th>
                    <th>Departs</th>
                    <th>Details</th>   
                </tr>
            </thead>
            <tbody>
                <% flights.forEach(function(f) { %>
                    <tr>
                        <td><%= f.airline %></td>
                        <td><%= f.airport %></td>
                        <td><%= f.flightNo %></td>
                        <td><%= f.departs %></td>
                        <td><a id="details" href="flights/<%= f._id %>">Detail</a></td>     
                    </tr>
                <% }) %>
            </tbody>
        </table>
     </form>     
</body>
 </html>
 <%- include('../partials/footer') %>
